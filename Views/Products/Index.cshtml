@model IEnumerable<AbcRetailStorage_st10288567.Models.ProductEntity>
@{
    ViewData["Title"] = "Products";
}
<h1>Products</h1>
<p><a asp-action="Create" class="btn btn-primary">Add Product</a></p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Description</td>
                <td>@p.Price</td>
                <td>@p.Stock</td>
                <td>
                    @if (!string.IsNullOrEmpty(p.ImageBlobName))
                    {
                        <img src="@Url.Action("Details", new { id = p.RowKey })" width="100" />
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@p.RowKey">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
