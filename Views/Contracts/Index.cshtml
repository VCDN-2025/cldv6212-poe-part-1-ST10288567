@model IEnumerable<Azure.Storage.Files.Shares.Models.ShareFileItem>
@{
    ViewData["Title"] = "Contracts";
}
<h1>Orders</h1>
<p><a asp-action="Upload" class="btn btn-primary">Upload Contract</a></p>
<table class="table">
    <thead>
        <tr>
            <th>File Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var file in Model)
        {
            <tr>
                <td>@file.Name</td>
                <td>
                    <a asp-action="Download" asp-route-fileName="@file.Name">Download</a>
                </td>
            </tr>
        }
    </tbody>
</table>
